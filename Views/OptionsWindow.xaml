<Window xmlns="https://github.com/avaloniaui" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:vm="clr-namespace:FuzzyComic.ViewModels;assembly=FuzzyComic" 
    Icon="resm:FuzzyComic.Assets.avalonia-logo.ico" 
    Title="FuzzyComic Options">
    <Design.DataContext>
        <vm:OptionsViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="*,Auto" 
        Margin="15">
        <StackPanel Grid.Row="0">
            <CheckBox Content="Fullscreen" 
                IsChecked="{Binding IsFullScreen}" />
        </StackPanel>
        <Grid Grid.Row="1" 
            ColumnDefinitions="*,Auto,Auto">
            <Button Grid.Column="1" 
                Width="100" 
                Height="25" 
                Margin="0 0 10 0" 
                Command="{Binding DoCancel}" 
                Content="Cancel" />
            <Button Grid.Column="2" 
                Width="100" 
                Height="25" 
                Content="Save" />
        </Grid>
    </Grid>
</Window>