<Window xmlns="https://github.com/avaloniaui" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:vm="clr-namespace:FuzzyComic.ViewModels;assembly=FuzzyComic" 
    Icon="resm:FuzzyComic.Assets.avalonia-logo.ico" 
    Title="FuzzyComic Options">
    <Design.DataContext>
        <vm:OptionsWindowViewModel/>
    </Design.DataContext>

    <StackPanel Margin="15">
        <CheckBox Content="Show System Window Decorations" 
            IsChecked="{Binding ShowSystemDecorations}" />
    </StackPanel>
</Window>