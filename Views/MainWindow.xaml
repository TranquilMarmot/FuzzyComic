<Window xmlns="https://github.com/avaloniaui" 
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
  xmlns:vm="clr-namespace:FuzzyComic.ViewModels;assembly=FuzzyComic" 
  Icon="resm:FuzzyComic.Assets.avalonia-logo.ico" 
  Title="FuzzyComic" 
  WindowState="Maximized" 
  HasSystemDecorations="false">
  <Design.DataContext>
    <vm:MainWindowViewModel/>
  </Design.DataContext>

  <Window.Styles>
    <Style Selector="Button.invisible">
      <Setter Property="Opacity" 
        Value="0" />
    </Style>

    <Style Selector="Window">
      <Setter Property="Background" 
        Value="Black" />
    </Style>
  </Window.Styles>

  <Grid RowDefinitions="*" 
    ColumnDefinitions="*">
    <Image ZIndex="0" 
      Stretch="Uniform" 
      Source="{Binding CurrentPage.CurrentImage}" />

    <Grid ZIndex="1" 
      RowDefinitions="*" 
      ColumnDefinitions="*,*,*">
      <Button Grid.Row="0" 
        Grid.Column="0" 
        Name="previousPageButton" 
        Command="{Binding DoPreviousPage}" 
        Content="Previous Page" 
        Cursor="Hand" />
      <Button Grid.Row="0" 
        Grid.Column="1" 
        Name="openComicButton" 
        Content="Double tap for menu" 
        Height="100" 
        Command="{Binding DoOpenComicFile}" 
        Cursor="Hand" />
      <Button Grid.Row="0" 
        Grid.Column="2" 
        Name="nextPageButton" 
        Command="{Binding DoNextPage}" 
        Content="Next Page" 
        Cursor="Hand" />
    </Grid>

  </Grid>

</Window>