<Window xmlns="https://github.com/avaloniaui" 
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
  xmlns:vm="clr-namespace:FuzzyComic.ViewModels;assembly=FuzzyComic" 
  Icon="resm:FuzzyComic.Assets.avalonia-logo.ico" 
  Title="FuzzyComic" 
  WindowState="Maximized" 
  HasSystemDecorations="false">
  <Design.DataContext>
    <vm:MainWindowViewModel/>
  </Design.DataContext>

  <Window.Styles>
    <Style Selector="Button#openComicButton.hidden">
      <Setter Property="IsVisible" 
        Value="false"/>
    </Style>
  </Window.Styles>

  <Grid RowDefinitions="*" 
    ColumnDefinitions="Auto,*,Auto">
    <Button Grid.Row="0" 
      Grid.Column="0" 
      Command="{Binding DoPreviousPage}" 
      Content="⬅" />
    <Button Grid.Row="0" 
      Grid.Column="1" 
      Name="openComicButton" 
      Content="Open Comic" 
      Command="{Binding DoOpenComicFile}" />
    <Image Grid.Row="0" 
      Grid.Column="1" 
      Stretch="Uniform" 
      Source="{Binding CurrentPage.CurrentImage}" 
      Cursor="Hand" />
    <Button Grid.Row="0" 
      Grid.Column="2" 
      Command="{Binding DoNextPage}" 
      Content="➡" />
  </Grid>

</Window>